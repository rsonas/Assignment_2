<!DOCTYPE html>

<html> 
        <head>    
            <title><%= title %></title>  
            <link rel="stylesheet" href="/content/index.css">
            <link rel="stylesheet" href="/content/contact.css">
        </head>  
        <body>  

            <!-- Main navigation bar-->
            <%- include ('partials/navbar.ejs') %>
        
        <!-- side panel with personal information -->
        <div id="page">
            <div id="sidePanel" style="display: flex; flex-direction: column;  align-items: center;">
                <img src="img/logo.png" style="width: 100px; margin-top: 20px;">
                <p>Aislinn Richardson</p>
                <p>301146892</p>
                <p>COMP249</p>
            </div>

            <div id="mainContent">
                <h1 id="header" style="text-align: center;"><%= title %></h1>
                <p style="text-align: center;"><%- h1 %></p>

                <fieldset>
                <!-- Form to submit information -->
                <form id="contactForm">
                    <label for="firstName">First Name</label>
                    <input type="text" id="firstName" required minlength='3' maxlength='15'><br><br>
                    
                    <label for="lastName">Last Name</label>
                    <input type="text" id="lastName" required minlength='4' maxlength='30'><br><br>
                    
                    <label for="phoneNumber">Phone Number</label>
                    <input type="number" id="phoneNumber"  minlength='9' maxlength='10'><br><br>

                    <label for="email">Email Address</label>
                    <input type="text" id="email" required maxlength='50'><br><br>

                    <label for="textMessage">Message: </label>
                    <input type="text" id="textMessage" required minlength='4' maxlength='250'><br><br>

                    <button class="button" id="submitInformation" onclick="submitInformation()">Submit Information</button>
                </form>
                </fieldset>

            </div>
        </div>

    </body>
</html> 